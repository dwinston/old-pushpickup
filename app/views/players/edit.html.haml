- provide :title, 'Edit player'
%h1 Update your profile

.row
  .span6.offset3
    = form_for(@player) do |f|
      = render 'fields', f: f
      = f.submit 'Save changes', class: 'btn btn-large btn-primary'
    = gravatar_for @player
    = link_to 'change', 'http://gravatar.com/emails', target: "_blank"

