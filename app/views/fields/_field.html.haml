%li
  %strong= field.name
  .address
    = "#{field.street_address}, #{field.city.name} #{field.zip_code}"
    |
    = link_to 'map', google_maps_link(field)
  = wrap(field.notes)
  - if current_player.admin? 
    .modify
      = link_to 'edit', edit_field_path(field) 
      |
      = link_to 'delete', field, method: 'delete', data: {confirm: "You sure?" }
