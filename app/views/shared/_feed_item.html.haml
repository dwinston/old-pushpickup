- if feed_item.is_a?(Availability)
  %li{class: 'availability_feed_item', id: 'availability_' + feed_item.id.to_s }
    .feed_item_icon.progress
      .bar.bar-warning{style: "width: #{[feed_item.duration, 100].min}%;"}
    %span.fields
      = feed_item.fields.map(&:name).to_sentence(two_words_connector: ' or ', last_word_connector: ', or ')
    %span.start_time= feed_item.start_time_to_s
    %span.duration for #{feed_item.duration_to_s}
    - if current_player?(feed_item.player)
      = link_to 'delete', feed_item, method: :delete,
                                     data: { confirm: 'You sure?' },
                                     title: feed_item.start_time_to_s
- else # feed_item.is_a?(Game)
  %li{class: 'game_feed_item', id: 'game_' + feed_item.id.to_s }
    .feed_item_icon.progress
      .bar.bar-success{style: "width: 100%;"}
    %span.fields
      %strong GAME ON 
      at #{feed_item.field.name}
    %span.start_time= start_time_to_s(feed_item.start_time)
    %span.duration for #{duration_to_s(feed_item.start_time, feed_item.duration)}
